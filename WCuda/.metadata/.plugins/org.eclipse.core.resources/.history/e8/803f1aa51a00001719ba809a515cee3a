#pragma once

#include <math.h>
#include "MathTools.h"
#include "FractaleMath.h"

#include "Calibreur_CPU.h"
#include "ColorTools_CPU.h"
using namespace cpu;

/*----------------------------------------------------------------------*\
 |*			Declaration 					*|
 \*---------------------------------------------------------------------*/

/*--------------------------------------*\
 |*		Public			*|
 \*-------------------------------------*/

class JuliaMathH : public FractaleMath
    {

	/*--------------------------------------*\
	|*		Constructor		*|
	 \*-------------------------------------*/

    public:

	JuliaMathH(uint n) : FractaleMath(n)
	    {

	    }

	virtual ~JuliaMathH()
	    {
	    // rien
	    }

    private:

	int f(float x, float y)
	    {
		float a = 0;
		float b = 0;
		float copyA = 0;
		int i = 0;

		do{
		    i++;
		    copyA = a;
		    a = (a*a-b*b)+x;
		    b = 2.0f*copyA*b+y;
		}
		while( a*a+b*b < 4.0f && i < n );


/*		for (i = 0; i < n; ++i)
		{
		    copyA = a;
		    a = (a*a-b*b)+x;
		    b = 2.0f*copyA*b+y;
		    if( a*a+b*b > 4.0f){
			return i;
		    }
		}
*/

		return i;
	    }

	/*--------------------------------------*\
	|*		Attributs		*|
	 \*-------------------------------------*/

    private:

	// Input
	uint n;

	// Tools
	Calibreur<float> calibreur;

    };

/*----------------------------------------------------------------------*\
 |*			End	 					*|
 \*---------------------------------------------------------------------*/
